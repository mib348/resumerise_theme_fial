<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">
		<title><%= it.resume.basics?.name ? it.resume.basics.name : ''%></title>
		<style>
			<%= it.css %>
		</style>
	</head>
	<body class="<%= it.resume.settings?.mode ? it.resume.settings.mode : ''%><%= it.type ? it.type : ''%>">
		<div class="container">
			<div id="resume">
				<% it.templates.forEach(function(template){ %>
					<%~ include(template, {resume: it.resume}) %>
				<% }) %>
			</div>
		</div>
	</body>
</html>
